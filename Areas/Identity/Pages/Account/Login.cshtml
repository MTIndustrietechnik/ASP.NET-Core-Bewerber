@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">

    <link rel="shortcut icon" href="../img/favicon.ico" type="image/x-icon">

    <title>Login-Bereich</title>
    <style>
        body {
            background: #F0F0F0;
        }

        .login {
            max-width: 550px;
            max-height: 600px;
            font-family: 'Montserrat', sans-serif;
            font-size: 17px;
            color: #292929;
            margin: 0 auto;
            float: none;
            border-width: 2px;
            border-radius: 15px;
            margin-bottom: 10px;
            margin-top: 120px;
        }

        .logostart {
            margin-bottom: 15px;
        }

        #button {
            margin-top: 20px;
            margin-bottom: 30px;
            background: #00AB55;
        }

        #header {
            margin-top: 30px;
        }

        #website {
            margin-left: 40%;
        }

        .btnneu {
            background-color: #00AB55;
        }
    </style>
</head>
<body>
    <main>
        <div class="card mb-3 border-success login">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-12 order-md-1 text-center">
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-Deutsch" role="tabpanel">
                                <div id="header" class="form-row">
                                    <div class="form-group col-md-12">
                                        <a><img src="~/image/mt-logo-2020.png" class="logostart" alt="Logo MT Industrietechnik GmbH & Co. KG"  width="300"></a>
                                    </div>
                                </div>
                                <form id="account" method="post">
                                    <div class="form-group col-md-12">
                                        <label>Anmeldename</label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label>Passwort</label>
                                        <input type="password" asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <button type="submit" class=" btnneu">Log in</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }

    </main>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
</body>
